rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperuser() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superuser';
    }
    
    // Products - Authenticated users can read/write
    match /products/{productId} {
      allow read: if true; // Public read for client app
      allow write: if isAuthenticated();
    }
    
    // Categories - Authenticated users can read/write
    match /categories/{categoryId} {
      allow read: if true; // Public read for client app
      allow write: if isAuthenticated();
      
      // Subcategories - Authenticated users can read/write
      match /subcategories/{subId} {
        allow read: if true; // Public read for client app
        allow write: if isAuthenticated();
      }
    }
    
    // Temas - Authenticated users can read/write
    match /temas/{temaId} {
      allow read: if true; // Public read for autocomplete
      allow write: if isAuthenticated();
    }
    
    // Orders - Authenticated only
    match /orders/{orderId} {
      allow read, write: if isAuthenticated();
    }
    
    // Sales - Authenticated only
    match /sales/{saleId} {
      allow read, write: if isAuthenticated();
    }
    
    // Pending Cash - Authenticated only
    match /pendingCash/{source} {
      allow read, write: if isAuthenticated();
    }
    
    // Shipments - Authenticated only
    match /shipments/{shipmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Locations - Authenticated read, superuser write
    match /locations/{locationId} {
      allow read: if isAuthenticated();
      allow write: if isSuperuser();
    }
    
    // Movements - Authenticated only
    match /movements/{movementId} {
      allow read, write: if isAuthenticated();
    }
    
    // Deposits - Authenticated users can create/read, superuser can do all
    match /deposits/{depositId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (request.auth.uid == '9QFhlKjJMkXMvrB0ISh1rghfPAl1' || 
         request.auth.uid == 'yMnQBCQrtpblH3yTHd05XLVloZu2');
    }
    
    // Expenses - Authenticated users can create, all can read, superuser can update/delete
    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (request.auth.uid == '9QFhlKjJMkXMvrB0ISh1rghfPAl1' || 
         request.auth.uid == 'yMnQBCQrtpblH3yTHd05XLVloZu2');
    }
    
    // Expense Categories - Authenticated read, superuser write
    match /expense_categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (request.auth.uid == '9QFhlKjJMkXMvrB0ISh1rghfPAl1' || 
         request.auth.uid == 'yMnQBCQrtpblH3yTHd05XLVloZu2');
    }
    
    // Users - Admin management
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isSuperuser();
    }
    
    // Notifications - Authenticated only
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }
  }
}
